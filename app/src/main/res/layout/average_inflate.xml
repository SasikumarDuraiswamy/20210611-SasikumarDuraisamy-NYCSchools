<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="4"
    android:orientation="horizontal">

    <TextView
        android:drawableStart="@drawable/test"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:id="@+id/text_taken"
        android:clickable="false"
        android:gravity="center"
        android:drawablePadding="@dimen/ten_dp"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:drawableStart="@drawable/math"
        android:textColor="@color/black"
        android:layout_weight="1"
        android:visibility="gone"
        android:gravity="center"
        android:clickable="false"
        android:layout_gravity="center"
        android:id="@+id/reading_score"
        android:drawablePadding="@dimen/ten_dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:drawableStart="@drawable/reading"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:id="@+id/math_score"
        android:visibility="gone"
        android:clickable="false"
        android:gravity="center"
        android:drawablePadding="@dimen/ten_dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:drawableStart="@drawable/writing"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:visibility="gone"
        android:clickable="false"
        android:gravity="center"
        android:drawablePadding="@dimen/ten_dp"
        android:id="@+id/writing_score"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
</LinearLayout>
