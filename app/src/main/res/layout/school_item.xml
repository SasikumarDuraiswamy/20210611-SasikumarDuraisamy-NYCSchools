<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/ten_dp"
    android:background="@drawable/border_blue_shape"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/five_dp"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/outline_school_black"
            android:layout_width="@dimen/two_four_dp"
            android:layout_height="@dimen/two_four_dp"
            android:layout_margin="@dimen/five_dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:id="@+id/school_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/school_detail_item" />

</LinearLayout>