<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ten_dp"
    android:padding="@dimen/ten_dp"
    android:orientation="vertical">

    <TextView
        android:textColor="@color/black"
        android:id="@+id/school_name"
        android:textSize="14sp"
        android:textStyle="bold"
        android:clickable="false"
        android:layout_marginBottom="@dimen/five_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/school_phone"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/five_dp"
        app:drawableStartCompat="@drawable/phone" />

    <TextView
        android:id="@+id/school_email"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/five_dp"
        app:drawableStartCompat="@drawable/email" />

    <TextView
        android:id="@+id/school_website"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/five_dp"
        app:drawableStartCompat="@drawable/website"/>

    <TextView
        android:id="@+id/school_sports"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:clickable="false"
        app:drawableStartCompat="@drawable/sports"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/school_city"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/five_dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/school_state"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/five_dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/school_zipcode"
            android:layout_width="wrap_content"
            android:clickable="false"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
